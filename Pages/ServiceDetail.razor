@page "/service/{ServiceSlug}"
@using DentalCLinic.Services
@using DentalCLinic.Models

<PageTitle>@Service?.Title - Oceanside Dental Centre</PageTitle>

@if (Service != null)
{
    <div class="row bg-sage text-white py-3 mb-5">
        <div class="container">
            <div class="col-12 text-center">
                <h1 class="h3 m-0">@Service.Title</h1>
            </div>
        </div>
    </div>

    <div class="container mb-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 p-md-5">
                        
                        <!-- Content -->
                        <div class="row service-content mb-5 text-justify">
                            <div class="col-md-6">
                                @((MarkupString)Service.DescriptionCol1)
                            </div>
                            <div class="col-md-6">
                                @((MarkupString)Service.DescriptionCol2)
                            </div>
                        </div>

                        <!-- Before & After Photos Container -->
                        <!-- Images Container -->
                        @if (!string.IsNullOrEmpty(Service.BeforeImage) || !string.IsNullOrEmpty(Service.AfterImage))
                        {
                            <div class="row mb-5">
                                @if (!string.IsNullOrEmpty(Service.BeforeImage) && !string.IsNullOrEmpty(Service.AfterImage))
                                {
                                    // Two Column Layout (Before & After)
                                    <div class="col-md-6 mb-4 mb-md-0">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-header bg-sage text-white text-center">
                                                <h5 class="m-0">@Service.BeforeImageLabel</h5>
                                            </div>
                                            <div class="card-body p-0">
                                                 <img src="@Service.BeforeImage" class="img-fluid w-100 h-100" style="object-fit:cover; min-height: 300px;" alt="@Service.BeforeImageLabel" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-header bg-sage text-white text-center">
                                                <h5 class="m-0">@Service.AfterImageLabel</h5>
                                            </div>
                                            <div class="card-body p-0">
                                                <img src="@Service.AfterImage" class="img-fluid w-100 h-100" style="object-fit:cover; min-height: 300px;" alt="@Service.AfterImageLabel" />
                                            </div>
                                        </div>
                                    </div>
                                }
                                else if (!string.IsNullOrEmpty(Service.BeforeImage) && string.IsNullOrEmpty(Service.AfterImage))
                                {
                                    // Single Image Layout (Full Width)
                                    <div class="col-12">
                                        <div class="card border-0 shadow-sm">
                                            <div class="card-body p-0">
                                                <img src="@Service.BeforeImage" class="img-fluid w-100" style="object-fit:cover; max-height: 500px;" alt="@Service.Title" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        <div class="mt-5 text-center">
                            <NavLink href="contact" class="btn btn-primary-custom text-white px-4 py-2">Book a Consultation</NavLink>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <p>Loading...</p>
    </div>
}

@code {
    [Parameter]
    public string? ServiceSlug { get; set; }

    private ServiceData? Service { get; set; }

    protected override void OnParametersSet()
    {
        if (!string.IsNullOrEmpty(ServiceSlug))
        {
            Service = ServiceRepository.GetService(ServiceSlug);

            if (Service == null)
            {
                // Fallback for slugs not in the repo yet
                Service = ServiceRepository.GetPlaceholder(ServiceSlug, GetTitleFromSlug(ServiceSlug));
            }
        }
    }

    private string GetTitleFromSlug(string slug)
    {
        // Simple humanizing logic for placeholder titles
        return System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(slug.Replace("-", " "));
    }
}
