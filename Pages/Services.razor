@page "/services"

<PageTitle>Our Services - Oceanside Dental Centre</PageTitle>

<!-- Page Header -->
<div class="row bg-sage text-white py-3 mb-5">
    <div class="container">
        <div class="col-12 text-center">
            <h1 class="h3 m-0">Our Services</h1>
        </div>
    </div>
</div>

<div class="container mb-5">
    
    <!-- Intro -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
            <p class="lead text-muted">
                At Oceanside Dental Centre, we offer a comprehensive range of dental services 
                to meet all your oral health needs. From preventive care to cosmetic dentistry, 
                our experienced team is here to help you achieve a healthy, beautiful smile.
            </p>
        </div>
    </div>

    <!-- Hygiene Services -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-sage text-white py-3">
                    <h2 class="h4 m-0">
                        <span class="material-icons align-middle me-2">cleaning_services</span>
                        Hygiene Services
                    </h2>
                    <small class="fst-italic">"Comprehensive Hygiene Services for your overall health and wellness"</small>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    Dental Cleanings & check-ups
                                </li>
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    Oral cancer screening
                                </li>
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    Preventative Hygiene
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    Restorative, deep pocket cleaning
                                </li>
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/laser-therapy" class="text-decoration-none">Laser therapy</a> & Cavitron treatments
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="service/hygiene" class="btn btn-outline-sage btn-sm">Learn More About Hygiene</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Restorative Services -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary-custom text-white py-3">
                    <h2 class="h4 m-0">
                        <span class="material-icons align-middle me-2">build</span>
                        Restorative Services
                    </h2>
                    <small class="fst-italic">"When it's needed"</small>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/composite-restorations" class="text-decoration-none">White fillings</a>
                                </li>
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/crowns" class="text-decoration-none">Crowns</a>
                                </li>
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/bridges" class="text-decoration-none">Bridges</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/implant-restoration" class="text-decoration-none">Implants</a> & <a href="service/mini-implants" class="text-decoration-none">Mini-implants</a>
                                </li>
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/endo-therapy" class="text-decoration-none">Root Canal therapy</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/extractions" class="text-decoration-none">Extractions</a> (with on-site surgeon)
                                </li>
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    Sedation by pre-arrangement
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cosmetic Services -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-sage text-white py-3">
                    <h2 class="h4 m-0">
                        <span class="material-icons align-middle me-2">auto_awesome</span>
                        Cosmetic Services
                    </h2>
                    <small class="fst-italic">"Because you're worth a beautiful smile"</small>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/cosmetic-veneers" class="text-decoration-none">Veneers</a>
                                </li>
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/crowns" class="text-decoration-none">Crowns</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/whitening" class="text-decoration-none">ZOOM Laser Teeth whitening</a>
                                </li>
                                <li class="mb-2">
                                    <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                                    <a href="service/whitening" class="text-decoration-none">Take home Bleaching Kits</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Children & Seniors -->
    <div class="row mb-5">
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary-custom text-white py-3">
                    <h2 class="h5 m-0">
                        <span class="material-icons align-middle me-2">child_care</span>
                        Children's Dentistry
                    </h2>
                </div>
                <div class="card-body p-4">
                    <ul class="list-unstyled mb-3">
                        <li class="mb-2">
                            <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                            We are a <a href="service/healthy-kids" class="text-decoration-none fw-bold">"Healthy Kids"</a> office
                        </li>
                        <li class="mb-2">
                            <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                            <a href="service/sealants" class="text-decoration-none">Dental Sealants</a> for cavity prevention
                        </li>
                        <li class="mb-2">
                            <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                            Check-ups & Cleanings
                        </li>
                        <li class="mb-2">
                            <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                            Preventative approach to a smile for life
                        </li>
                    </ul>
                    <a href="service/child-first-visit" class="btn btn-outline-sage btn-sm">Child's First Visit</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary-custom text-white py-3">
                    <h2 class="h5 m-0">
                        <span class="material-icons align-middle me-2">elderly</span>
                        Senior's Dentistry
                    </h2>
                </div>
                <div class="card-body p-4">
                    <ul class="list-unstyled mb-3">
                        <li class="mb-2">
                            <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                            Full & Partial Dentures
                        </li>
                        <li class="mb-2">
                            <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                            <a href="service/mini-implants" class="text-decoration-none">Mini-implants</a> for lower teeth
                        </li>
                        <li class="mb-2">
                            <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">check_circle</span>
                            Cleanings & restorative service
                        </li>
                        <li class="mb-2">
                            <span class="material-icons text-sage align-middle me-2" style="font-size:18px;">local_offer</span>
                            <strong class="text-sage">10% Senior Special Discount</strong> on all services!
                        </li>
                    </ul>
                    <a href="service/children-seniors" class="btn btn-outline-sage btn-sm">Learn More</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Services -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-sage text-white py-3">
                    <h2 class="h4 m-0">
                        <span class="material-icons align-middle me-2">medical_services</span>
                        Additional Services
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="service/tmj-pain" class="text-decoration-none">
                                <div class="p-3 border rounded h-100 text-center hover-lift">
                                    <span class="material-icons text-sage mb-2" style="font-size:36px;">psychology</span>
                                    <h5 class="text-dark">TMJ / Jaw Pain</h5>
                                    <small class="text-muted">Treatment for jaw and headache pain</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="service/laser-therapy" class="text-decoration-none">
                                <div class="p-3 border rounded h-100 text-center hover-lift">
                                    <span class="material-icons text-sage mb-2" style="font-size:36px;">bolt</span>
                                    <h5 class="text-dark">Laser Therapy</h5>
                                    <small class="text-muted">Advanced laser gum treatment</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="service/sealants" class="text-decoration-none">
                                <div class="p-3 border rounded h-100 text-center hover-lift">
                                    <span class="material-icons text-sage mb-2" style="font-size:36px;">shield</span>
                                    <h5 class="text-dark">Pit & Fissure Sealants</h5>
                                    <small class="text-muted">Preventive protection for teeth</small>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA -->
    <div class="row">
        <div class="col-12">
            <div class="text-center p-5 bg-light rounded shadow-sm">
                <h3 class="text-sage mb-3">Have Questions About Our Services?</h3>
                <p class="text-muted mb-4">
                    Please contact us if you have any questions or would like to request a procedure not listed above.
                </p>
                <a href="contact" class="btn btn-primary-custom text-white px-4 py-2">
                    <span class="material-icons align-middle me-1">phone</span>
                    Contact Us Today
                </a>
            </div>
        </div>
    </div>

</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
    }
    .btn-outline-sage {
        color: var(--color-sage-green);
        border-color: var(--color-sage-green);
    }
    .btn-outline-sage:hover {
        background-color: var(--color-sage-green);
        color: white;
    }
</style>
